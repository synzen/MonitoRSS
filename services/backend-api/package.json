{
  "name": "backend-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:legacy-feed-converter:local": "cross-env NODE_ENV=local nest start --config legacy-feed-bulk-converter.nest-cli.json --watch",
    "start:schedule-emitter:local": "cross-env NODE_ENV=local nest start --config schedule-emitter.nest-cli.json --watch",
    "start:schedule-emitter:production": "cross-env NODE_ENV=production nest start --config schedule-emitter.nest-cli.json --watch",
    "start:local": "cross-env NODE_ENV=local nest start --watch",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=local nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./src/test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/cookie": "8.3.0",
    "@fastify/secure-session": "5.2.0",
    "@fastify/static": "^6.5.0",
    "@golevelup/nestjs-rabbitmq": "^3.4.0",
    "@monitorss/logger": "^1.1.1",
    "@nestjs/common": "^9.1.2",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.1.2",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/platform-fastify": "^9.1.2",
    "@nestjs/serve-static": "^3.0.0",
    "@synzen/discord-rest": "^0.7.0-beta.2",
    "cache-manager": "^4.1.0",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.0",
    "commander": "^9.1.0",
    "dayjs": "1.10.8",
    "dd-trace": "^2.4.0",
    "dotenv": "10.0.0",
    "fastify": "^4.6.0",
    "feedparser": "2.2.10",
    "html-to-text": "5.1.1",
    "lodash": "4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.37",
    "mongoose": "^6.11.3",
    "node-fetch": "2.6.7",
    "qs": "6.10.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.2.0",
    "simple-markdown": "^0.7.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.3",
    "@nestjs/schematics": "8.0.0",
    "@nestjs/testing": "^9.1.2",
    "@types/amqplib": "^0.10.1",
    "@types/cache-manager": "^4.0.2",
    "@types/feedparser": "2.2.5",
    "@types/html-to-text": "5.1.1",
    "@types/jest": "27.0.1",
    "@types/lodash": "4.14.179",
    "@types/node": "16.0.0",
    "@types/node-fetch": "2.6.1",
    "@types/qs": "6.9.7",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "cross-env": "7.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "27.0.6",
    "mongodb-memory-server": "^8.4.0",
    "nock": "13.2.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "supertest": "6.1.3",
    "ts-jest": "27.0.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.5.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.8.4"
  },
  "jest": {
    "testTimeout": 20000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest",
      "^.+\\.(js)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
