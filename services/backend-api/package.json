{
  "name": "backend-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:schedule-emitter": "nest start --config schedule-emitter.nest-cli.json --watch",
    "start:script:local": "cross-env NODE_ENV=local nest start --config script.nest-cli.json --watch",
    "start:script:prod": "cross-env NODE_ENV=production nest start --config script.nest-cli.json --watch",
    "start:enforce-limits:local": "cross-env NODE_ENV=local nest start --config enforce-limits.nest-cli.json --watch",
    "start:enforce-limits:prod": "cross-env NODE_ENV=production nest start --config enforce-limits.nest-cli.json --watch",
    "start:migrate-legacy-feeds:local": "cross-env NODE_ENV=local nest start --config migrate-all-legacy-feeds.nest-cli.json",
    "start:migrate-legacy-feeds:prod": "cross-env NODE_ENV=production nest start --config migrate-all-legacy-feeds.nest-cli.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./src/test/jest-e2e.json"
  },
  "dependencies": {
    "@discordjs/rest": "^2.6.0",
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "11.0.2",
    "@fastify/secure-session": "8.1.1",
    "@fastify/static": "^8.1.1",
    "@golevelup/nestjs-rabbitmq": "^5.7.0",
    "@monitorss/logger": "^1.1.2",
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.10",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.10",
    "@nestjs/mongoose": "^11.0.1",
    "@nestjs/platform-fastify": "^11.0.10",
    "@nestjs/serve-static": "^5.0.3",
    "cache-manager": "^6.4.0",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.1",
    "commander": "^12.0.0",
    "dayjs": "^1.11.11",
    "dotenv": "10.0.0",
    "fastify": "^5.2.1",
    "feedparser": "2.2.10",
    "handlebars": "^4.7.8",
    "html-to-text": "5.1.1",
    "lodash": "4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "mongoose": "^7.6.2",
    "nodemailer": "^6.9.13",
    "qs": "6.12.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.4",
    "@nestjs/schematics": "11.0.1",
    "@nestjs/testing": "^11.0.10",
    "@types/amqplib": "^0.10.5",
    "@types/cache-manager": "^5.0.0",
    "@types/feedparser": "2.2.8",
    "@types/html-to-text": "5.1.1",
    "@types/jest": "^28.1.8",
    "@types/lodash": "4.17.1",
    "@types/node": "^20.12.8",
    "@types/node-fetch": "2.6.1",
    "@types/nodemailer": "^6.4.15",
    "@types/qs": "6.9.15",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "cross-env": "7.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "jest": "^28.1.3",
    "mongodb-memory-server": "^8.4.0",
    "nock": "13.5.4",
    "prettier": "^2.7.1",
    "rimraf": "^5.0.5",
    "supertest": "6.1.3",
    "ts-jest": "^28.0.8",
    "ts-loader": "9.2.3",
    "ts-node": "10.5.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "5.4.5"
  },
  "jest": {
    "testTimeout": 20000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest",
      "^.+\\.(js)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
